<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.security.server.dao.LawsRegulationDao">

	<sql id="where">
		<where>
			<if test="params.addFile != null and params.addFile != ''">
				and addFile = #{params.addFile} 
			</if>
			<if test="params.company != null and params.company != ''">
				and company = #{params.company} 
			</if>
			<if test="params.createTime != null and params.createTime != ''">
				and createTime = #{params.createTime} 
			</if>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.fId != null and params.fId != ''">
				and fId = #{params.fId}
			</if>
			<if test="params.sId != null and params.sId != ''">
				and sId = #{params.sId}
			</if>
			<if test="params.beginTime != null and params.beginTime != ''">
				<if test="params.endTime != null and params.endTime != ''">
					and createTime between #{params.beginTime} and #{params.endTime}
				</if>
				<if test="params.endTime == null || params.endTime == ''">
					and createTime > #{params.beginTime}
				</if>
			</if>
			<if test="params.endTime != null and params.endTime != ''">
				<if test="params.beginTime == null || params.beginTime == ''">
					and createTime &lt; #{params.endTime}
				</if>
			</if>
			<if test="params.pageView != null and params.pageView != ''">
				and pageView = #{params.pageView} 
			</if>
			<if test="params.symbol != null and params.symbol != ''">
				and symbol = #{params.symbol} 
			</if>
			<if test="params.content != null and params.content != ''">
				and content = #{params.content}
			</if>
			<if test="params.updateTime != null and params.updateTime != ''">
				and updateTime = #{params.updateTime} 
			</if>
			<if test="params.searchByInput != null and params.searchByInput != ''">
				and name like concat('%', #{params.searchByInput}, '%')
			</if>
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from laws_regulation t
		<include refid="where" />
	</select>

	<select id="list" resultType="LawsRegulation">
		select * from laws_regulation t
		<include refid="where" />
		${params.orderBy}
		<if test="limit !=null and limit !=''">
			limit #{offset}, #{limit}
		</if>
	</select>

	<update id="update">
		update laws_regulation t
		<set>
			<if test="addFile != null">
				addFile = #{addFile}, 
			</if>
			<if test="company != null">
				company = #{company}, 
			</if>
			<if test="createTime != null">
				createTime = #{createTime}, 
			</if>
			<if test="name != null">
				name = #{name}, 
			</if>
			<if test="pageView != null">
				pageView = #{pageView}, 
			</if>
			<if test="content != null">
				content = #{content},
			</if>
			<if test="symbol != null">
				symbol = #{symbol}, 
			</if>
			<if test="updateTime != null">
				updateTime = #{updateTime}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
