<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.security.server.dao.PjRequireDao">

	<sql id="where">
		<where>
			<if test="params.addFile != null and params.addFile != ''">
				and addFile = #{params.addFile} 
			</if>
			<if test="params.cMoney != null and params.cMoney != ''">
				and cMoney = #{params.cMoney} 
			</if>
			<if test="params.cWays != null and params.cWays != ''">
				and cWays = #{params.cWays} 
			</if>
			<if test="params.describe != null and params.describe != ''">
				and describe = #{params.describe} 
			</if>
			<if test="params.endTime != null and params.endTime != ''">
				and endTime = #{params.endTime} 
			</if>
			<if test="params.fId != null and params.fId != ''">
				and fId = #{params.fId} 
			</if>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.man != null and params.man != ''">
				and man = #{params.man} 
			</if>
			<if test="params.name != null and params.name != ''">
				and name = #{params.name} 
			</if>
			<if test="params.phone != null and params.phone != ''">
				and phone = #{params.phone} 
			</if>
			<if test="params.place != null and params.place != ''">
				and place = #{params.place} 
			</if>
			<if test="params.sId != null and params.sId != ''">
				and sId = #{params.sId} 
			</if>
			<if test="params.target != null and params.target != ''">
				and target = #{params.target} 
			</if>
			<if test="params.unit != null and params.unit != ''">
				and unit = #{params.unit} 
			</if>
			<if test="params.xfArea != null and params.xfArea != ''">
				and xfArea = #{params.xfArea} 
			</if>
			<if test="params.searchByInput != null and params.searchByInput != ''">
				and a.name like concat('%', #{params.searchByInput}, '%')
			</if>
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from pj_require a
		<include refid="where" />
	</select>

	<select id="list" resultType="PjRequire">
		select a.*,b.name as fIdName,c.name as sIdName
		from pj_require a
		join pj_require_classifyInfo b on a.fId = b.id
		join pj_require_classifyInfo c on a.sId = c.id
		<include refid="where" />
		<if test="params.orderBy!=null and params.orderBy !=''">
			${params.orderBy}
		</if>
		<if test="limit!=null and limit !=''">
			limit #{offset}, #{limit}
		</if>
	</select>

	<update id="update">
		update pj_require t
		<set>
			<if test="addFile != null">
				addFile = #{addFile}, 
			</if>
			<if test="cMoney != null">
				cMoney = #{cMoney}, 
			</if>
			<if test="cWays != null">
				cWays = #{cWays}, 
			</if>
			<if test="describe != null">
				describe = #{describe}, 
			</if>
			<if test="endTime != null">
				endTime = #{endTime}, 
			</if>
			<if test="fId != null">
				fId = #{fId}, 
			</if>
			<if test="man != null">
				man = #{man}, 
			</if>
			<if test="name != null">
				name = #{name}, 
			</if>
			<if test="phone != null">
				phone = #{phone}, 
			</if>
			<if test="place != null">
				place = #{place}, 
			</if>
			<if test="sId != null">
				sId = #{sId}, 
			</if>
			<if test="target != null">
				target = #{target}, 
			</if>
			<if test="unit != null">
				unit = #{unit}, 
			</if>
			<if test="xfArea != null">
				xfArea = #{xfArea}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
