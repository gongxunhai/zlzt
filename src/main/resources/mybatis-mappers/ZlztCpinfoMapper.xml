<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.security.server.dao.ZlztCpinfoDao">

	<sql id="where">
		<where>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.cpId != null and params.cpId != ''">
				and cpId = #{params.cpId} 
			</if>
			<if test="params.name != null and params.name != ''">
				and name = #{params.name} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from zlzt_cpinfo t
		<include refid="where" />
	</select>

	<select id="list" resultType="ZlztCpinfo">
		select * from zlzt_cpinfo t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update zlzt_cpinfo t
		<set>
			<if test="cpId != null">
				cpId = #{cpId}, 
			</if>
			<if test="name != null">
				name = #{name}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
