<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.security.server.dao.ZlztPointAgreeDao">

	<sql id="where">
		<where>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.userid != null and params.userid != ''">
				and userid = #{params.userid} 
			</if>
			<if test="params.agreeId != null and params.agreeId != ''">
				and agreeId = #{params.agreeId} 
			</if>
			<if test="params.type != null and params.type != ''">
				and type = #{params.type} 
			</if>
			<if test="params.createTime != null and params.createTime != ''">
				and createTime = #{params.createTime} 
			</if>
			<if test="params.updateTime != null and params.updateTime != ''">
				and updateTime = #{params.updateTime} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from zlzt_point_agree t
		<include refid="where" />
	</select>

	<select id="list" resultType="ZlztPointAgree">
		select * from zlzt_point_agree t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update zlzt_point_agree t
		<set>
			<if test="userid != null">
				userid = #{userid}, 
			</if>
			<if test="agreeId != null">
				agreeId = #{agreeId}, 
			</if>
			<if test="type != null">
				type = #{type}, 
			</if>
			<if test="createTime != null">
				createTime = #{createTime}, 
			</if>
			<if test="updateTime != null">
				updateTime = #{updateTime}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
